generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Photo {
  id        Int      @id @default(autoincrement())
  fileName  String
  data      Bytes
  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt
  User      User[]
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  senha     String
  photoId   Int
  photo     Photo    @relation(fields: [photoId], references: [id])
  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt
}
